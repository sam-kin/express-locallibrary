extends layout

block main
    if book
        h1 Delete #{book.title}

        p Author: #{book.author.name}

        p Are you sure you want to delete this book
        form(action="", method="post")
            button.btn.btn-danger(type='submit') Confirm
    else
        p #{message}
        .control-container
            a.btn.btn-primary(href="/catalog/book") go to book list